<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm
                 http://xmlns.jcp.org/xml/ns/persistence/orm_2_1.xsd"
                 version="2.1">
    
    <named-native-query
        name="UsuarioEntity.obtenerUsuarioId"
        result-class="com.intercam.entities.UsuarioEntity">
        <query>
            <![CDATA[
                SELECT * FROM Usuario_Entity WHERE id = :id
            ]]>
        </query>
    </named-native-query>
    
    <named-native-query
        name="UsuarioEntity.obtenerUsuario"
        result-class="com.intercam.entities.UsuarioEntity">
        <query>
            <![CDATA[
                SELECT * FROM Usuario_Entity
            ]]>
        </query>
    </named-native-query>
    
    <named-native-query
        name="UsuarioEntity.crearUsuario">
        <query>
            <![CDATA[
                INSERT INTO Usuario_Entity (nombre, apellido_Paterno, apellido_Materno, fecha_Nacimiento) 
                VALUES (:nombre, :apellidoPaterno, :apellidoMaterno, :fechaNacimiento)
            ]]>
        </query>
    </named-native-query>
    
    <named-native-query
        name="UsuarioEntity.actualizarUsuario">
        <query>
            <![CDATA[
                UPDATE Usuario_Entity SET nombre = :nombre, 
                apellido_Paterno = :apellidoPaterno, 
                apellido_Materno = :apellidoMaterno, 
                fecha_Nacimiento = :fechaNacimiento 
                WHERE id = :id
            ]]>
        </query>
    </named-native-query>
    
        <named-native-query
        name="UsuarioEntity.eliminarUsuario">
        <query>
            <![CDATA[
                DELETE FROM Usuario_Entity WHERE id = :id
            ]]>
        </query>
    </named-native-query>
    
    <named-native-query
        name="DireccionEntity.obtenerDireccionId"
        result-class="com.intercam.entities.DireccionEntity">
        <query>
            <![CDATA[
                SELECT * FROM DIRECCION_ENTITY WHERE id = :id
            ]]>
        </query>
    </named-native-query>
    
    <named-native-query
        name="DireccionEntity.obtenerDireccion"
        result-class="com.intercam.entities.DireccionEntity">
        <query>
            <![CDATA[
                SELECT * FROM DIRECCION_ENTITY 
            ]]>
        </query>
    </named-native-query>
    
    <named-native-query
        name="DireccionEntity.crearDireccion">
        <query>
            <![CDATA[
                INSERT INTO DIRECCION_ENTITY (codigo_Postal, estado) 
                VALUES (:codigoPostal, :estado)
            ]]>
        </query>
    </named-native-query>
    
    <named-native-query
        name="DireccionEntity.actualizarDireccion">
        <query>
            <![CDATA[
                UPDATE DIRECCION_ENTITY SET codigo_Postal = :codigoPostal,
                estado = :estado
                WHERE id = :id
            ]]>
        </query>
    </named-native-query>
    
        <named-native-query
        name="DireccionEntity.eliminarDireccion">
        <query>
            <![CDATA[
                DELETE FROM DIRECCION_ENTITY WHERE id = :id
            ]]>
        </query>
    </named-native-query>
    
    

</entity-mappings>
